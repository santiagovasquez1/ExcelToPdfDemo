{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug ExcelToHtml CLI",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/interfaces/cli.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": [
        "${workspaceFolder}/assets/${input:fileName}.xlsx",
        "${workspaceFolder}/assets/${input:fileName}.html"
      ],
      "justMyCode": true
    }
  ],
  "inputs": [
    {
      "id": "fileName",
      "type": "promptString",
      "description": "Ingresa el nombre del archivo (sin extensi√≥n) a procesar"
    }
  ]
}